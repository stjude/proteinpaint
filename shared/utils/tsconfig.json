{
  "compilerOptions": {
    "strictNullChecks": true,
    "rootDir": "./",
    "baseUrl": "./",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "es2016",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler" // to skip errors related to import of types from ts files
  },
  "exclude": [
    "./node_modules"
  ]
}