{
  "compilerOptions": {
    "strictNullChecks": true,
    "rootDir": "./",
    "baseUrl": "./",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "plugins": [
      { "transform": "typia/lib/transform" }
    ],
    "target": "es2016",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler" // to skip errors related to import of types from ts files
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}