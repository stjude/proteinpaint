{
  "version": "2.3.0",
  "name": "@stjude/proteinpaint",
  "description": "a genomics visualization tool for exploring a cohort's genotype and phenotype data",
  "main": "server/main.js",
  "bin": "server/bin.js",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "portal",
    "rust"
  ],
  "scripts": {
    "reset": "npm install",
    "predev": "if [[ -d ./client ]]; then node ./client/test/import-specs.js name=? && rm -f ../public/bin/*proteinpaint.js; fi",
    "dev": "webpack --config=./webpack.config.js --env NODE_ENV=development --watch --progress --color",
    "start": "./build/dev/resetBundles.sh && nodemon server/bin.js --watch serverconfig.json --watch ./server/server*.js* --watch server/genome --watch server/dataset",
    "dev1": "trap 'kill %1' INT; webpack --config=./webpack.config.js --env NODE_ENV=development --watch --color & npm start",
    "server": "trap 'kill %1' INT; npm run dev -w @stjude/proteinpaint-server & npm start",
    "client": "npm run dev -w @stjude/proteinpaint-client",
    "docker": "./build/dev/run.sh",
    "ppr": "./build/deploy.sh ppr",
    "prp1": "./build/deploy.sh prp1",
    "testws": "npm test --workspaces",
    "sethooks": "rm -f .git/hooks/pre-commit && cd .git/hooks && ln -s ../../utils/hooks/pre-commit pre-commit && chmod -R 755 ../../utils/hooks",
    "getconf": "node -p 'JSON.stringify(require(\"./server/src/serverconfig.js\"),null,\"  \")'"
  },
  "author": "",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/stjude/proteinpaint"
  },
  "bugs": {
    "url": "https://github.com/stjude/proteinpaint"
  }
}
