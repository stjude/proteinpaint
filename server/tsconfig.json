{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2016",   
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "#src/*": [
        "./src/*"
      ],
      "#shared/*": [
        "./shared/*"
      ]
    },
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "**/*+(.spec|.e2e).ts",
    "**/Point.ts",
    "**/test/*"
  ]
}