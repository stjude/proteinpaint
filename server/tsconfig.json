{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "#types": ["./shared/types/index.mts"],
      "#shared/types/*": ["./shared/types/*"],
      "#shared/*": ["./shared/*"],
      "#src/*": ["./src/*"],
      "#routes/*": ["./routes/*"]
    }
  },
  "types": ["node"],
  "include": ["./**/*.ts"],
  "exclude": ["./**/*.type.spec.ts", "./package/*", "shared/checkers*/**/*"]
}