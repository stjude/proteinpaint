{
  "name": "vcf2matrix",
  "title": "VCF to mutation matrix",
  "summary": "Show gene-by-sample mutation matrix based on the data from one or more VCF files",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "vcf_file",
      "label": "VCF files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf","*.vcf.gz"
      ],
      "help": ""
    },
    {
      "name": "other_options",
      "label": "Other options",
      "class": "string",
      "optional": false,
      "help": "--genome=hg19 --excludeclass=intron"
    }
  ],
  "outputSpec": [
  	{
	"name":"matrix_viewer",
	"label":"matrix Viewer",
	"help":"matrix Viewer",
	"class":"file",
	"patterns":["*"]
	}
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
	"assetDepends":[ {"id":"record-FBGqxvj0FJjvPXGP7gVGGQp9"} ],
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/script.sh"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x4"
        }
      }
    }
  }
}
